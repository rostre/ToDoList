<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/country_item_height"
    android:paddingLeft="@dimen/general_margin"
    android:paddingRight="@dimen/general_margin">

    <TextView
        android:id="@+id/tvCategoryItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/general_margin"
        android:text="@string/select_category"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp" />

    <ImageView
        android:layout_width="@dimen/general_margin"
        android:layout_height="@dimen/general_margin"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />
</RelativeLayout>