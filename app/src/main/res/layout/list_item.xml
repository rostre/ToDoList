<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="ro.twodoors.todolist.utils.BindingUtilsKt"/>
        <import type="android.view.View"/>
        <variable
            name="todo"
            type="ro.twodoors.todolist.model.Todo" />
        <variable
            name="clickListener"
            type="ro.twodoors.todolist.view.MainAdapter.OnClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:applyPriority="@{todo.priority}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/ckbCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:checked="@={todo.completed}"
                android:onClick="@{() -> clickListener.onCheckboxChecked(todo.id, todo.completed)}" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@{todo.title}"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                app:layout_constraintStart_toEndOf="@id/ckbCompleted"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:text="@{todo.description}"
                android:isGone="@{todo.description.toString().empty}"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                app:layout_constraintStart_toEndOf="@id/ckbCompleted"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <TextView
                android:id="@+id/lblCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="0dp"
                android:paddingEnd="4dp"
                android:text="@string/created_on"
                android:textStyle="italic"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                app:layout_constraintRight_toLeftOf="@id/txtCreated"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/description" />

            <TextView
                android:id="@+id/txtCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{BindingUtilsKt.convertLongToString(todo.createdOn)}"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lblCreated"
                app:layout_constraintTop_toBottomOf="@+id/description"
                tools:text="@tools:sample/date/mmddyy" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>