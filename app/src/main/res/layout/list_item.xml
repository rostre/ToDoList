<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="ro.twodoors.todolist.utils.BindingUtilsKt"/>
        <import type="android.view.View"/>
        <variable
            name="todo"
            type="ro.twodoors.todolist.model.Todo" />
        <variable
            name="clickListener"
            type="ro.twodoors.todolist.view.adapter.MainAdapter.OnClickListener" />
    </data>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="16dp"
            android:id="@+id/task_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/ckbCompleted"
                style="@style/CustomCheckboxTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:checked="@={todo.completed}"
                android:onClick="@{() -> clickListener.onCheckboxChecked(todo.id, todo.completed)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"

                android:layout_marginBottom="16dp"
                android:text="@{todo.title}"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                app:layout_constraintBottom_toTopOf="@+id/description"
                app:layout_constraintEnd_toStartOf="@+id/ckbCompleted"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTaskColor"
                tools:text="This is the task name" />

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:isGone="@{todo.description.empty}"
                android:text="@{todo.description}"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/title"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/ckbCompleted"
                tools:text="This is the task description" />

            <ImageView
                android:id="@+id/ivDueDate"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_today_black_24dp"
                app:layout_constraintStart_toEndOf="@+id/txtDueDate"
                app:layout_constraintTop_toTopOf="@+id/txtDueDate" />

            <TextView
                android:id="@+id/txtDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@{BindingUtilsKt.convertLongToString(todo.dueDate)}"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                app:layout_constraintBottom_toBottomOf="@+id/txtTaskColor"
                app:layout_constraintStart_toEndOf="@+id/txtTaskColor"
                app:layout_constraintTop_toTopOf="@+id/txtTaskColor"
                tools:text="@tools:sample/date/mmddyy" />

            <TextView
                android:id="@+id/txtTaskColor"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{todo.dueDate == null ? View.GONE : View.VISIBLE}"
                app:constraint_referenced_ids="ivDueDate,txtDueDate" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>